<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PinActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="right"
        android:fontFamily="sans-serif-thin"
        android:text="Пропустить"
        android:textColor="#57A9FF"
        android:textSize="18dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:text="Создайте пароль"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20dp"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Для защиты ваших персональных данных"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:gravity="center">
        <ImageView
            android:id="@+id/img1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/unfilled"/>
        <ImageView
            android:id="@+id/img2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/unfilled"/>
        <ImageView
            android:id="@+id/img3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/unfilled"/>
        <ImageView
            android:id="@+id/img4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/unfilled"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:gravity="center">

        <Button
            android:id="@+id/but1"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:text="1"
            app:cornerRadius = '100000dp'
            android:backgroundTint="#F5F5F9"
            android:textColor="#000"
            android:textSize="25dp"
            android:outlineAmbientShadowColor="#FFFFFF"
            android:outlineSpotShadowColor="#FFFFFF"
            android:shadowColor="#FFFFFF">
        </Button>

        <Button
            android:id="@+id/but2"
            android:layout_marginLeft="40dp"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:text="2"
            app:cornerRadius = '100000dp'
            android:backgroundTint="#F5F5F9"
            android:textColor="#000"
            android:textSize="25dp"
            android:outlineAmbientShadowColor="#FFFFFF"
            android:outlineSpotShadowColor="#FFFFFF"
            android:shadowColor="#FFFFFF">
        </Button>
        <Button
            android:id="@+id/but3"
            android:layout_marginLeft="40dp"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:text="3"
            app:cornerRadius = '100000dp'
            android:backgroundTint="#F5F5F9"
            android:textColor="#000"
            android:textSize="25dp"
            android:outlineAmbientShadowColor="#FFFFFF"
            android:outlineSpotShadowColor="#FFFFFF"
            android:shadowColor="#FFFFFF"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <Button
            android:id="@+id/but4"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:text="4"
            app:cornerRadius = '100000dp'
            android:backgroundTint="#F5F5F9"
            android:textColor="#000"
            android:textSize="25dp"
            android:outlineAmbientShadowColor="#FFFFFF"
            android:outlineSpotShadowColor="#FFFFFF"
            android:shadowColor="#FFFFFF">
        </Button>

        <Button
            android:id="@+id/but5"
            android:layout_marginLeft="40dp"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:text="5"
            app:cornerRadius = '100000dp'
            android:backgroundTint="#F5F5F9"
            android:textColor="#000"
            android:textSize="25dp"
            android:outlineAmbientShadowColor="#FFFFFF"
            android:outlineSpotShadowColor="#FFFFFF"
            android:shadowColor="#FFFFFF">
        </Button>
        <Button
            android:id="@+id/but6"
            android:layout_marginLeft="40dp"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:text="6"
            app:cornerRadius = '100000dp'
            android:backgroundTint="#F5F5F9"
            android:textColor="#000"
            android:textSize="25dp"
            android:outlineAmbientShadowColor="#FFFFFF"
            android:outlineSpotShadowColor="#FFFFFF"
            android:shadowColor="#FFFFFF"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <Button
            android:id="@+id/but7"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:text="7"
            app:cornerRadius = '100000dp'
            android:backgroundTint="#F5F5F9"
            android:textColor="#000"
            android:textSize="25dp"
            android:outlineAmbientShadowColor="#FFFFFF"
            android:outlineSpotShadowColor="#FFFFFF"
            android:shadowColor="#FFFFFF">
        </Button>

        <Button
            android:id="@+id/but8"
            android:layout_marginLeft="40dp"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:text="8"
            app:cornerRadius = '100000dp'
            android:backgroundTint="#F5F5F9"
            android:textColor="#000"
            android:textSize="25dp"
            android:outlineAmbientShadowColor="#FFFFFF"
            android:outlineSpotShadowColor="#FFFFFF"
            android:shadowColor="#FFFFFF">
        </Button>
        <Button
            android:id="@+id/but9"
            android:layout_marginLeft="40dp"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:text="9"
            app:cornerRadius = '100000dp'
            android:backgroundTint="#F5F5F9"
            android:textColor="#000"
            android:textSize="25dp"
            android:outlineAmbientShadowColor="#FFFFFF"
            android:outlineSpotShadowColor="#FFFFFF"
            android:shadowColor="#FFFFFF"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/but0"
            android:layout_marginLeft="166dp"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:backgroundTint="#F5F5F9"
            android:outlineAmbientShadowColor="#FFFFFF"
            android:outlineSpotShadowColor="#FFFFFF"
            android:shadowColor="#FFFFFF"
            android:text="0"
            android:textColor="#000"
            android:textSize="25dp"
            app:cornerRadius='100000dp'></Button>

        <ImageButton
            android:id="@+id/del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/delicon"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="63dp"/>

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>